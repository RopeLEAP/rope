@{
    ViewBag.Title = "About";
}
<h2>Rope Testing</h2>
@*<h3>@ViewBag.Message</h3>*@


<div ng-controller="Main as main">

    <button ng-click="main.getStringBuilderFillTestResults()">String Builder Test</button>
    <input ng-model="main.iterations"/>
    <h3>{{main.stringBuilderData.method}}</h3>
        <table class="table table-striped" ng-show="main.stringBuilderFillTestData">
            <thead>
                <tr>
                    <th>Iteration</th>
                    <th>Memory</th>
                    <th>Time</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="test in main.stringBuilderFillTestData.data">
                    <td>{{test.id}}</td>
                    <td>{{test.memory}}</td>
                    <td>{{test.time}}</td>
                </tr>
            </tbody>
        </table>

    <canvas class="chart chart-line" chart-data="main.data" chart-labels="main.labels"
            chart-series="main.series"></canvas> 

</div>

@Scripts.Render("~/bundles/jquery")

<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.7/angular.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.4.0/Chart.min.js"></script>
<script src="https://cdn.jsdelivr.net/angular.chartjs/latest/angular-chart.min.js"></script>
<script src="/Content/app/app.js"></script>
<script src="~/Content/app/config.js"></script>
<script src="~/Content/app/MainController.js"></script>